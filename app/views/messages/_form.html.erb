<h1>New Messages</h1>

<%= turbo_frame_tag 'new_message', target: '_top' do %>
  <%= form_with(model: [ @message.room, @message ],local: true, data: { turbo: false } ) do |form| %>

    <div class="field">
      <%= form.text_field :content %>
      <%= form.submit 'Send' %>
    </div>

  <% end %>
<% end %>

<%= link_to 'Back', @message.room %>